                    </ul>
                </nav>
                <hr>
                <h6 class="m-3">Vous avez à découvrir près de <em> 3400</em> Recettes</h6>
                <!--Articles-->
                <div class="ArticlesWrapp row d-flex justify-content-center m-1">
                <!--Partie Affichage-->
                    {% for recipe in Recipes %}
                            <div class="card m-3" style="width:15rem">
                            <div class="card-body">
                            <h4 class="card-title text-center">{{recipe.title}}</h4>
                            <p class="card-text"> {{recipe.content}}</p>
                            <p class="card-text"> {{recipe.category}}</p>
